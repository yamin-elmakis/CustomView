<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VolumeView">
        <attr name="android:src"/>
        <attr name="volume_back_color" format="reference"/>
        <attr name="volume_normal_color" format="reference"/>
        <attr name="volume_high_color" format="reference"/>
        <attr name="volume_high_percentage" format="float"/>
        <attr name="volume_delta" format="float"/>
        <attr name="volume_base_percentage" format="float"/>
    </declare-styleable>

    <declare-styleable name="TriangleView">
        <attr name="triangle_color" format="reference"/>
    </declare-styleable>

    <declare-styleable name="TypingIndicator">
        <attr name="indicator_color" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CircleView">
        <attr name="circle_top_color" format="reference"/>
        <attr name="circle_bottom_color" format="reference"/>
        <attr name="circle_stroke_width" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ArcView">
        <attr name="android:textColor"/>
        <attr name="android:textSize"/>
        <attr name="arc_back_color" format="reference"/>
        <attr name="arc_low_color" format="reference"/>
        <attr name="arc_mid_color" format="reference"/>
        <attr name="arc_high_color" format="reference"/>
        <attr name="arc_width" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="StarView">
        <attr name="star_start_color" format="reference"/>
        <attr name="star_end_color" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ColorPickerView">
        <attr name="color_picker_color" format="reference"/>
        <!--<attr name="star_end_color" format="reference"/>-->
    </declare-styleable>

</resources>